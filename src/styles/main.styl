.l-p-t10 {
    padding-top: 10px;
}

.l-m-l10 {
    margin-left: 10px;
}

.bespoke-parent {
    background-position: bottom 10px left 10px;
    background-repeat: no-repeat;
    background-size: 13%;
}

table {
    width: 100%;

    th, td {
        padding: 5px;
    }

    td {
        border-top: 1px solid white;
        border-bottom: 1px solid white;
    }

    th:first-child, td:first-child {
        border-right 1px solid white;
    }

    tr:last-child td {
        border-bottom: none;
    }
}

code.small[class*="language-"],
pre.small[class*="language-"] {
    font-size: 12px;
}

code.xsmall[class*="language-"],
pre.xsmall[class*="language-"] {
    font-size: 10px;
}

/* Phones, small tablets */
@media(max-width: 767px) {
    .bespoke-parent {
        background-size: 30%;
    }
}

/* Tablets */
@media(min-width: 768px) and (max-width: 991px) {
    .bespoke-parent {
        background-size: 20%;
    }
}

/* Desktops */
@media(min-width: 992px) and (max-width: 1199px) {
    .bespoke-parent {
        background-size: 15%;
    }
}
